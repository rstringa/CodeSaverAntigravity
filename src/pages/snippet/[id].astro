---
import Layout from "../../layouts/Layout.astro";
import { getSnippetById, getCategories } from "../../lib/data";
import { Copy, Clock, Folder, ChevronLeft, Edit2, Trash2 } from "@lucide/astro";
import { Code } from "astro:components"; // Shiki component for Astro

const { id } = Astro.params;
const snippet = await getSnippetById(id);
const categories = await getCategories();

if (!snippet) {
    return Astro.redirect("/404");
}

const category = categories.find((c) => c.id === snippet.categoryId);
const categoryName = category ? category.name : "General";

// Try to detect language or use javascript as default
const lang = "javascript";
---

<Layout
    title={`${snippet.title} | CodeSaverAntigravity`}
    activeCategoryId={snippet.categoryId}
>
    <div class="detail-container">
        <header class="detail-header">
            <a href="/dashboard" class="back-link">
                <ChevronLeft size={20} />
                <span>Volver</span>
            </a>
            <div class="header-main">
                <div class="title-row">
                    <h1>{snippet.title}</h1>
                    <div class="actions">
                        <button
                            class="btn-secondary copy-btn"
                            data-code={snippet.code}
                        >
                            <Copy size={18} />
                            <span>Copiar</span>
                        </button>
                    </div>
                </div>
                <div class="meta-row">
                    <div class="meta-item">
                        <Folder size={16} />
                        <span>{categoryName}</span>
                    </div>
                    <div class="meta-item">
                        <Clock size={16} />
                        <span
                            >Creado el {
                                new Date(snippet.createdAt).toLocaleDateString()
                            }</span
                        >
                    </div>
                </div>
            </div>
        </header>

        <div class="snippet-content">
            <div class="description">
                {snippet.description}
            </div>

            <div class="code-wrapper">
                <div class="code-header">
                    <div class="header-left">
                        <span class="lang-label">{lang}</span>
                    </div>
                    <div class="header-right">
                        <button
                            class="icon-action-btn tiny-copy-btn"
                            data-code={snippet.code}
                            title="Copiar"
                        >
                            <Copy size={16} />
                        </button>
                        <a
                            href={`/edit/${id}`}
                            class="icon-action-btn edit-btn"
                            title="Editar"
                        >
                            <Edit2 size={16} />
                        </a>
                        <button
                            class="icon-action-btn delete-btn"
                            data-id={id}
                            title="Eliminar"
                        >
                            <Trash2 size={16} />
                        </button>
                    </div>
                </div>
                <div class="shiki-container">
                    <Code code={snippet.code} lang={lang} theme="github-dark" />
                </div>
            </div>
        </div>
    </div>
</Layout>

<style is:global>
    /* Shiki styles override */
    .shiki-container pre {
        padding: 1.5rem !important;
        margin: 0 !important;
        background-color: #0d0d0d !important;
        font-size: 0.9375rem !important;
        line-height: 1.6 !important;
    }
</style>

<style>
    .detail-container {
        max-width: 900px;
        margin: 0 auto;
        padding-bottom: 4rem;
    }

    .back-link {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        color: var(--text-tertiary);
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: var(--accent);
    }

    .header-main {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .title-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .title-row h1 {
        font-size: 2rem;
        letter-spacing: -0.025em;
    }

    .actions {
        display: flex;
        gap: 0.75rem;
    }

    .btn-secondary {
        background: var(--bg-tertiary);
        color: var(--text-primary);
        border: 1px solid var(--border-primary);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-secondary:hover {
        background: var(--border-primary);
    }

    .meta-row {
        display: flex;
        gap: 1.5rem;
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .snippet-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .description {
        font-size: 1.125rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .code-wrapper {
        background: #0d0d0d;
        border: 1px solid var(--border-primary);
        border-radius: var(--radius-lg);
        overflow: hidden;
    }

    .code-header {
        background: #1a1a1a;
        padding: 0.6rem 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--border-primary);
    }

    .header-right {
        display: flex;
        gap: 0.5rem;
    }

    .icon-action-btn {
        background: transparent;
        border: 1px solid var(--border-primary);
        color: var(--text-tertiary);
        padding: 0.4rem;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .icon-action-btn:hover {
        background: var(--bg-tertiary);
        color: var(--text-primary);
        border-color: var(--text-tertiary);
    }

    .delete-btn:hover {
        color: var(--error);
        border-color: var(--error);
    }

    .lang-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 700;
        color: var(--text-tertiary);
        letter-spacing: 0.05em;
    }
</style>

<script>
    // Copy functionality
    document.querySelectorAll(".copy-btn, .tiny-copy-btn").forEach((btn) => {
        btn.addEventListener("click", async () => {
            const code = btn.getAttribute("data-code");
            try {
                if (code) {
                    await navigator.clipboard.writeText(code);
                    const span = btn.querySelector("span");
                    if (span) {
                        const originalText = span.textContent;
                        span.textContent = "Copiado!";
                        setTimeout(() => {
                            span.textContent = originalText;
                        }, 2000);
                    } else {
                        // Feedback for icon-only button
                        const originalHtml = btn.innerHTML;
                        btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check text-accent"><polyline points="20 6 9 17 4 12"/></svg>`;
                        setTimeout(() => {
                            btn.innerHTML = originalHtml;
                        }, 2000);
                    }
                }
            } catch (err) {
                console.error("Error al copiar:", err);
            }
        });
    });

    // Delete functionality
    const deleteBtn = document.querySelector(".delete-btn");
    if (deleteBtn) {
        deleteBtn.addEventListener("click", async () => {
            const id = deleteBtn.getAttribute("data-id");
            if (
                confirm("¿Estás seguro de que quieres eliminar este snippet?")
            ) {
                try {
                    const response = await fetch(`/api/snippets/${id}`, {
                        method: "DELETE",
                    });
                    if (response.ok) {
                        window.location.href = "/dashboard";
                    } else {
                        alert("Error al eliminar el snippet");
                    }
                } catch (err) {
                    console.error("Error:", err);
                    alert("Error de conexión");
                }
            }
        });
    }
</script>
